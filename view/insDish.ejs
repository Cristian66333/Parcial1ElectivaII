<body>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Insertar nuevo Registro</h1>
            </div>
            <div class="card-body">
                <form action="/app/" method="POST">
                    <h2>formulario</h2>
                    id <input type="text" id="idPlato" name="idPlato">
                    <br>
                    nombre <input type="text" id="namePlato" name="namePlato">
                    <br>
                    value <input type="number" id="valuePlato" name="valuePlato">
                    <br>
                    vegetarian <input type="radio" name="vegetarianPlato" value="Si">si
                    <input type="radio" name="vegetarianPlato" value="No" checked>no

                    <button type="submit" class="btn btn-primary">enviar</button>
                </form>
            </div>
        </div>
        

    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
